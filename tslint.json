{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "quotemark": [true, "single"],
    "indent": [true, "spaces", 2],
    "interface-name": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "no-consecutive-blank-lines": false,
    "prefer-object-spread": true,
    "prefer-const": true,
    "member-access": false,
    "no-unused-variable": [
      true,
      {
        "ignore-pattern": "^_"
      }
    ]
  }
}
